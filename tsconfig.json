{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ES2020",
		"moduleResolution": "Node",
		"rootDir": "src",
		"outDir": "dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"baseUrl": "src",
		"paths": {
			"@logic/*": ["logic/*"],
			"@routes/*": ["routes/*"],
			"@services/*": ["services/*"],
			"@database/*": ["database/*"],
			"@config": ["config"]
		}
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}
